        <TextBlock HorizontalAlignment="Left" Margin="335,107,0,0" TextWrapping="Wrap" Text="Ciclos para cambio" VerticalAlignment="Top" Width="102"/>
        <TextBox x:Name="ciclosParaCambio" HorizontalAlignment="Left" Height="24" Margin="335,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>

